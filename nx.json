{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "namedInputs": {
    "environment-files": ["{workspaceRoot}/.env", "{workspaceRoot}/.env.local"],
    "project-build-files": [
      "environment-files",
      "project-files",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)"
    ],
    "project-files": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": []
  },
  "release": {
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    },
    "projectsRelationship": "independent",
    "version": {
      "generatorOptions": {
        "currentVersionResolver": "git-tag",
        "fallbackVersion": "0.0.0",
        "packageRoot": "artifact/package/{projectName}",
        "specifierSource": "conventional-commits"
      }
    }
  },
  "targetDefaults": {
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ]
    },
    "@nx/jest:jest": {
      "cache": true,
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "inputs": ["project-files", "^project-files"],
      "options": {
        "passWithNoTests": true
      }
    },
    "build-package": {
      "dependsOn": ["^build"],
      "inputs": ["project-build-files", "^project-build-files"]
    },
    "lint": {
      "inputs": [
        "project-files",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheableOperations": ["build-package", "lint", "unit-test"]
      },
      "runner": "nx/tasks-runners/default"
    }
  },
  "useInferencePlugins": false
}
