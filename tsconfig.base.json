{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@webframe/assert-unreachable": [
        "package/assert-unreachable"
      ],
      "@webframe/inactivity-timeout": [
        "package/inactivity-timeout"
      ],
      "@webframe/react-providers": [
        "package/react-providers"
      ],
      "@webframe/write-message-to-file-array": [
        "package/write-message-to-file-array"
      ]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "exclude": [
    ".github",
    ".husky",
    ".nx",
    ".vscode",
    ".yarn",
    "artifact/",
    "coverage/",
    "node_modules/",
    "script/",
    "tmp/"
  ]
}
